<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Event Details</title>
</head>
<body class="bg-[#131313]">

  <%- include('./partials/navbar.ejs')%>
  <h1 class="text-3xl text-center text-white m-20">
    Event Details
  </h1>


<div class="flex justify-center">
<div class=" p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 justify-center w-full mx-80">
  <div class="flex justify-between"> 
      <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><%= event.title %></h5>
      <a href="#" class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-red-700 rounded-lg hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800 delete" data-doc="<%= event._id %>" >
        Delete
    </a>
  </div>
  <p class=" font-normal text-gray-700 dark:text-gray-200">Date: <%= new Date(event.date).toLocaleDateString('en-GB', { day: 'numeric', month: 'short', year: 'numeric' })  %>
   </p>
  <p class="m-12 font-normal text-gray-700 dark:text-gray-200"><%= event.description %></p>
  <div class="text-center">
  <a href="/<%=event._id%>/attendees" class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
      Attendee List
  </a>
  <a href="/<%=event._id%>/rsvp" class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
    RSVP
  </a>
</div>
</div>
</div>

  <%- include('./partials/create-button.ejs')%>
</body>

<script>
  const trashcan = document.querySelector('a.delete');

  trashcan.addEventListener('click', (e) => {
    const endpoint = `/${trashcan.dataset.doc}`;

    fetch(endpoint, {
      method: 'DELETE'
    })
    .then((response ) => response.json())
    .then((data) => {
      console.log(data);
      window.location.href = data.redirect;
    })
    .catch(err => console.log(err));
  })
</script>

</html>